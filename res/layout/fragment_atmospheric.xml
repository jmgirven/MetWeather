<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/atmospheric_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    <LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
        android:orientation="vertical" >
    
	    <ImageView
		    android:id="@+id/atmo_image_temp"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:layout_margin="4dp"
		    android:adjustViewBounds="true"
		    android:scaleType="centerCrop"
		    android:contentDescription="Temperature" />
	    
	    <ImageView
		    android:id="@+id/atmo_image_pres"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:layout_margin="4dp"
		    android:adjustViewBounds="true"
		    android:scaleType="centerCrop"
		    android:contentDescription="Barometric Pressure" />
	    
	    <ImageView
		    android:id="@+id/atmo_image_vis"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:layout_margin="4dp"
		    android:adjustViewBounds="true"
		    android:scaleType="centerCrop"
		    android:contentDescription="Visability" />
    
    </LinearLayout>
    
</ScrollView>
